<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_4">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/gotocreateevent2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:text="CREATE EVENT"
            app:layout_constraintTop_toBottomOf="@+id/gotosearch"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/gotoUploadAlbum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Upload Album"
            app:layout_constraintTop_toBottomOf="@+id/gotocreategroup"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/gotosearch"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_height="40dp"
            android:text="SEARCH "/>

        <Button
            android:id="@+id/gotocreategroup"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/gotosearch"
            android:layout_height="40dp"
            android:text="CREATE GROUP"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>